{
  "name": "next-boiler",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:check": "eslint --ignore-path .eslintignore --ext .js,.ts,.tsx",
    "prettier:check": "prettier --ignore-path .gitignore --write \"app/**/*.+(js|ts|tsx|json)\"",
    "lint:fix": "eslint . --fix",
    "prettier:fix": "prettier --write \"app/**/*.+(js|ts|tsx|json)\"",
    "lint-prettier-fix": "yarn lint:fix && yarn prettier:fix  && yarn lint",
    "lint-prettier-check": "yarn lint:check && yarn prettier:check",
    "lint-prettier": "yarn lint-prettier-fix && yarn lint-prettier-check"
   
  },
  "lint-staged": {
    "app/**/*.ts": "yarn lint-prettier"
  },
  "dependencies": {
    "@types/node": "20.3.2",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "autoprefixer": "10.4.14",
    "eslint": "8.43.0",
    "eslint-config-next": "13.4.7",
    "next": "13.4.7",
    "postcss": "8.4.24",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.3.2",
    "typescript": "5.0.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.8.8",
    "eslint-formatter-pretty": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2"
  }
